---
import { Site } from "../site";
import navbar from "../config/navbar.yml";
import search from "../config/search.yml";
import popular from "../config/popular.yml";
import tools from "../config/tools.yml";
import services from "../config/services.yml";
import Group from "./Group.astro";
---

<!DOCTYPE html>
<html lang="zh-CN">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="author" content="Anye" />
    <meta name="referrer" content="origin">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{Site.title}</title>
    <meta name="keywords" content={Site.keywords} />
    <meta name="description" content={Site.description} />
    <meta name="generator" content="Astro" />
    <meta name="template" content="Mcnav" />
    <link rel="icon" href={Site.icon} type="image/x-icon" />
    <link rel="shortcut icon" href={Site.icon} type="image/x-icon">
    <link rel="apple-touch-icon" href={Site.icon} sizes="180x180" />
    <link rel="stylesheet" href="//lf9-cdn-tos.bytecdntp.com/cdn/expire-1-M/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="//lf3-cdn-tos.bytecdntp.com/cdn/expire-1-M/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}/css/style.min.css`}> <script src="//lf3-cdn-tos.bytecdntp.com/cdn/expire-1-M/jquery/3.6.0/jquery.min.js" type="application/javascript">
    </script>
  </head>

  <body class="home blog">
    <div class="site-wrapper">
      <aside class="site-aside bg-white">
        <div class="aside-wrapper">
          <a href=`${import.meta.env.BASE_URL}` class="aside-brand d-none d-xl-flex" rel="home">
            <img src={Site.headIcon} class="logo nc-no-lazy" alt={Site.title}>
            <img src={Site.icon} class="logo-sm nc-no-lazy" alt={Site.title}>
          </a>

          <!-- 左侧边栏 -->
          <div class="aside-scroll scrollable hover">
            <ul class="aside-menu">

              {
              services.map((list: any) => (
              <li class="menu-item menu-item-type-taxonomy menu-item-object-category">
                <a onclick={`document.getElementById('${list.id}').scrollIntoView({behavior: 'smooth' , block: 'center' })`} aria-current="page">
                  <span class="menu-icon">
                    <i class={list.icon}></i>
                  </span>
                  <span class="menu-text">{list.title}</span>
                </a>
              </li>
              ))
              }
            </ul>
          </div>

        </div>
      </aside>

      <!-- 顶部导航 -->
      <header class="site-header bg-white">
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <a href=`${import.meta.env.BASE_URL}` class="navbar-brand d-xl-none" rel="home">
              <img src={`${import.meta.env.BASE_URL}/image/head.png`} class="logo nc-no-lazy" alt={Site.title}>
            </a>
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav navbar-site me-auto ms-5 ms-xl-0">
                {
                navbar.map((list: any) => (
                <li class="menu-item menu-item-type-taxonomy menu-item-object-category">
                  <a href={list.url}>{list.name}</a>
                </li>
                ))
                }
              </ul>
            </div>
            <div class="d-flex align-items-center flex-shrink-0 ms-auto me-lg-4">
              <!-- 纯静态网站，不需要登录功能 -->
              <!-- <a href="https://nav.mancs.cn/admin" class="btn btn-link btn-icon btn-rounded ms-3 ms-md-4 ">
			  <span>
				<i class="fa fa-user"></i>
			  </span>
			</a> -->
              <a href="javascript:;" class="btn btn-link btn-icon btn-rounded ms-3 ms-md-4 " id="menuCollasped">
                <span>
                  <i class="fas fa-th-large"></i>
                </span>
              </a>
            </div>
          </div>
        </nav>
      </header>

      <main class="site-main">
        <div class="container">
          <div class="row g-3 g-xl-4">
            <div class="col-12">
              <div id="search" class="search-block card card-xl">
                <div class="card-body">
                    <div class="search-tab">
                    {
                    search.map((list: any, index: number) => (
                    <a href='javascript:;' data-url={list.url} class={`btn btn-link btn-sm btn-rounded ${index === 0 ? 'active' : ''}`}>
                      <i class={list.icon} aria-hidden='true'></i>&nbsp;{list.name}
                    </a>
                    ))
                    }
                  </div>
                  <form>
                    <input type="text" class="form-control" placeholder="请输入关键词并按回车键…">
                  </form>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-4 d-lg-flex hot-rank">
              <div class="card card-xl flex-fill">
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-sm fa-flag"></i>
                    <div class="h4">热门站点</div>
                  </div>
                </div>
                <div class="card-body">
                  <div class="list-number list-row list-bordered">
                    {
                    popular.map((list: any) => (
                    <div class="list-item">
                      <div class="list-content">
                        <div class="list-body">
                          <div class="list-title h-1x">{list.name}</div>
                        </div>
                      </div>
                      <a href={list.url} target="_blank" title={list.name} class="list-goto nav-item"></a>
                    </div>
                    ))
                    }
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-8 d-lg-flex tool-direct">
              <div class="card card-xl flex-fill">
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-sm fa-paperclip"></i>
                    <div class="h4">工具直达</div>
                  </div>
                </div>
                <div class="card-body">
                  <div class="index-sudoku row list text-center g-2 g-md-3 g-lg-4">
                    {
                    tools.map((list: any) => (
                    <div class='col-4 col-md-3 col-md-2 col-lg-2'>
                      <div class='list-item'>
                        <div style={`background: ${list.color}`} class='btn btn-link btn-icon btn-md btn-rounded mx-auto mb-2'>
                          <span>
                            <i class={list.icon}></i>
                          </span>
                        </div>
                        <div class='text-sm text-muted'>{list.name}</div>
                        <a href={list.url} target='_blank' class='list-goto'></a>
                      </div>
                    </div>
                    ))
                    }
                  </div>
                </div>
              </div>
            </div>
            {
            services.map((list: any) => (
            <div class="col-12">
              <div class="card" id={list.id}>
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <i class={list.icon}></i>
                    <div class="h4">{list.title}</div>
                  </div>
                </div>
                <div class="card-body">
                  <div class="row g-2 g-md-3 list-grid list-grid-padding">

                    <Group services={list.services} />
                  </div>
                </div>
              </div>
            </div>
            ))
            }
          </div>
        </div>
      </main>
      <footer class="site-footer">
        <div class="container">
          <div class="copyright text-xs text-muted text-center">
            <a class="text-muted" href={"http://www.beian.gov.cn/portal/registerSystemInfo?recordcode="+Site.gongan} target="_blank" rel="nofollow noopener">
              <img src={`${import.meta.env.BASE_URL}/image/icp.png`} alt="公安网备" width="16" height="16">{Site.gongan}</a>
            <a class="text-muted" href="http://beian.miit.gov.cn/" target="_blank">{Site.icp}</a>
            <p></p>
            <span class="d-inline-block">© Copyright {new Date().getFullYear()}</span>
            <a class="text-muted" href=`${import.meta.env.BASE_URL}` rel="home">{Site.title}</a>
          </div>
        </div>
      </footer>
    </div>
    <ul class="site-fixedmenu">
      <li id="scrollToTOP">
        <a href="#" class="btn btn-start btn-icon btn-rounded">
          <span>
            <i class="fas fa-arrow-up"></i>
          </span>
        </a>
      </li>
    </ul>
    <script src={`${import.meta.env.BASE_URL}/js/lazyload.min.js`} type="application/javascript"></script>
    <script src={`${import.meta.env.BASE_URL}/js/script.min.js`} type="text/javascript"></script>
  </body>

</html>